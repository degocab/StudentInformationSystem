@model Exercises.Models.Data.State
@{
    ViewBag.Title = "EditState";
}

<h2>EditState</h2>
<div>
    <div class="col-xs-12">
        @Html.ActionLink("Return to List", "States", "Admin")
    </div>
</div>
<div class="row">
@using (Html.BeginForm())
{
    <div class="col-xs-12">
        
            <div class="form-group">
                <label>State Name</label>
                @Html.TextBoxFor(m => m.StateName, new { @class = "form-control", placeholder = "State Name" })
            </div>
            <div class="form-group">
                <label>State Abbreviation</label><h1/>
                @Html.DisplayFor(m => m.StateAbbreviation)
          
            </div>
            @*<button type="submit" class="btn btn-sm btn-primary">Save</button>*@
           
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-sm btn-success">Save</button>
            @Html.ActionLink("Cancel", "Majors", "Admin", null, new { @class = "btn btn-sm btn-info" })
        </div>
    </div>
}
</div>
