<div class="row">
    <div class="col-xs-12">
        <h3>Delete Student</h3>
        @Html.ActionLink("Return to List", "List", "Student")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <dl class="dl-horizontal">
            <dt>First Name:</dt>
            <dd>@Html.DisplayFor(model => model.FirstName)</dd>
            <dt>Last Name:</dt>
            <dd>@Html.DisplayFor(model => model.LastName)</dd>
            <dt>Major: </dt>
            <dd>@Html.DisplayFor(model => model.Major.MajorName)</dd>
            <dt>GPA: </dt>
            <dd>@Html.DisplayFor(model => model.GPA)</dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>City: </dt>
            <dd>@Html.DisplayFor(model => model.Address.City)</dd>
            <dt>State: </dt>
            <dd>@Html.DisplayFor(model => model.Address.State.StateAbbreviation)</dd>
            <dt>Street: </dt>
            <dd>@Html.DisplayFor(model => model.Address.Street1)</dd>
            <dt>Postal Code:</dt>
            <dd>@Html.DisplayFor(model => model.Address.PostalCode)</dd>
        </dl>
        <div>
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(m => m.StudentId)
                <p>Are you sure that you wish to delete this student?</p>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    @Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn-sm btn-info" })
            }
        </div>
    </div>
</div>
