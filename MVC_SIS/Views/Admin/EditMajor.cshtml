@model Exercises.Models.Data.Major

@{
    ViewBag.Title = "EditMajor";
}

<h2>Edit Major</h2>
<div class="row">
    <div class="col-xs-12">
 
        @Html.ActionLink("Return to List", "Majors", "Admin")
    </div>
</div>
<div class="row">
@using (Html.BeginForm())
{
    <div class="col-xs-12">
        
            @Html.HiddenFor(m => m.MajorId)
            <div class="form-group">
                <label>Major</label>
                @Html.TextBoxFor(m => m.MajorName, new { @class = "form-control", placeholder = "Major" })
            </div>
            @*<button type="submit" class="btn btn-sm btn-primary">Save</button>*@
        
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
           
                <button type="submit" class="btn btn-sm btn-primary">Save</button>
                @Html.ActionLink("Cancel", "Majors", "Admin", null, new { @class = "btn btn-sm btn-info" })
             
        </div>
    </div>
}
 
</div>      